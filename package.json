{
  "name": "@ntix/validating",
  "version": "0.0.0-development",
  "description": "a small validator",
  "repository": {
    "url": "https://github.com/ntix/validating",
    "type": "git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "npm run clean && npm run barrels",
    "barrels": "barrelsby -q --delete --directory src --include \\.ts$ --exclude \"(\\.spec|this)\\.ts$\" --location all",
    "build": "ttsc",
    "build.docs": "typedoc --out docs src --theme minimal --readme docs.md --media dist",
    "clean": "shx rm -rf dist",
    "format": "tslint -c tslint.json 'src/**/*.{ts,tsx}' && prettier --write \"./**/*.{ts,tsx,json}\"",
    "test": "jest",
    "test.watch": "jest --watchAll",
    "start": "npm run build.docs && serve docs",
    "commit": "git add . && npx git-cz",
    "prepublishOnly": "npm run build.docs",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "validate",
    "validation"
  ],
  "author": "Anthony Johnston <npm@antix.co.uk> (http://antix.co.uk)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "barrelsby": "^2.2.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "rollup": "^2.16.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "semantic-release": "^17.0.8",
    "shx": "^0.3.2",
    "ts-jest": "^26.1.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": false,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "(.*)\\.js": "$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,  scss,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branches": ["release"]
  }
}
